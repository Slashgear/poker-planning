{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":automergeMinor",
    "group:allNonMajor"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "matchManagers": [
        "dockerfile"
      ],
      "enabled": true
    },
    {
      "groupName": "playwright",
      "matchPackageNames": [
        "/^@playwright//",
        "/^playwright/"
      ]
    },
    {
      "groupName": "tanstack",
      "matchPackageNames": [
        "/^@tanstack//"
      ]
    },
    {
      "groupName": "testing",
      "matchPackageNames": [
        "/vitest/",
        "/playwright/"
      ]
    }
  ],
  "schedule": [
    "before 7am on monday"
  ]
}
